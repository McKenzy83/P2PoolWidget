<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:background="@drawable/widget_back"
    android:padding="2.0dip"
     xmlns:android="http://schemas.android.com/apk/res/android"
     android:id="@+id/LL1">

    <TextView
        android:id="@+id/WidgettextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#c0c0c0ff"
        android:textSize="10sp" 
        android:layout_marginLeft="3dp"
        />

    <TextView
        android:id="@+id/WidgettextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@android:color/white"
        android:textSize="10sp" 
        android:layout_marginLeft="3dp"
        />

    <LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:orientation="horizontal"
    >
    
    <TextView
        android:id="@+id/WidgettextView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" 
        android:textColor="#c0c0c0ff"
        android:textSize="10sp"
        android:ellipsize="end"
        android:layout_weight="0"
        android:layout_marginLeft="3dp"
        android:inputType="text"/>
    <TextView
        android:id="@+id/WidgettextView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" 
        android:textColor="@android:color/white"
        android:textSize="10sp"
        android:layout_weight="1"
        android:layout_gravity="right"
        android:layout_marginLeft="5dp"
        android:inputType="text"/>
    </LinearLayout>
    <TextView
        android:id="@+id/WidgettextView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" 
        android:textColor="#c0c0c0ff"
        android:textSize="10sp"
        android:layout_marginLeft="3dp"
        />
    <TextView
        android:id="@+id/WidgettextView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" 
        android:textColor="@android:color/white"
        android:textSize="10sp"
        android:layout_marginLeft="3dp"
        />
    <TextView
        android:id="@+id/WidgettextView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" 
        android:textColor="#c0c0c0ff"
        android:textSize="10sp"
        android:layout_marginLeft="3dp"
	/>
    <TextView
        android:id="@+id/WidgettextView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" 
        android:textColor="#c0c0c0ff"
        android:textSize="10sp"
        android:layout_marginLeft="3dp"
	/>
            
</LinearLayout>